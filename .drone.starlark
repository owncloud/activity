def phpunit():
	pipelines = []

	for php, matrix in config['phpunit'].items():
		if matrix['coverage']:
			command = 'make test-php-unit-dbg'
		else:
			command = 'make test-php-unit'

		for db in matrix['db']:
			result = {
				'kind': 'pipeline',
				'type': 'docker',
				'name': 'phpunit-php%s-%s' % (php, db.replace(":", "")),
				'workspace' : {
					'base': '/var/www/owncloud',
					'path': 'server/apps/%s' % config['app']
				},
				'steps': [
					installCore('daily-master-qa', db),
					setupServerAndApp('7.0'),
					{
						'name': 'phpunit-tests',
						'image': 'owncloudci/php:%s' % php,
						'pull': 'always',
						'commands': [
							command
						]
					}
				],
				'services': databaseService(db),
				'depends_on': [],
				'trigger': {
					'ref': [
						'refs/pull/**',
						'refs/tags/**'
					]
				}
			}

			if matrix['coverage']:
				result['steps'].append({
					'name': 'codecov-upload',
					'image': 'plugins/codecov:2',
					'pull': 'always',
					'settings': {
						'paths': [
							'tests/output/clover.xml',
						],
						'token': {
							'from_secret': 'codecov_token'
						}
					}
				})

			for branch in config['branches']:
				result['trigger']['ref'].append('refs/heads/%s' % branch)

			pipelines.append(result)

	return pipelines

def acceptance():
	pipelines = []

	default = {
		'server': ['daily-master-qa', '10.2.1'],
		'browser': ['chrome', 'firefox'],
		'php': ['7.0'],
		'db': ['mariadb:10.2'],
		'federate': False,
	}

	for suite, matrix in config['acceptance'].items():
		isWebUI = suite.startswith('webUI')
		isAPI = suite.startswith('api')

		if isWebUI:
			nameStart = 'webui-%s' % (suite.replace('webUI', ''))

		if isAPI:
			nameStart = 'api-%s' % (suite.replace('api', ''))
			default['browser'] = ['']

		servers = matrix['server'] if 'server' in matrix else default['server']
		browsers = matrix['browser'] if 'browser' in matrix else default['browser']
		phps = matrix['php'] if 'php' in matrix else default['php']
		dbs = matrix['db'] if 'db' in matrix else default['db']
		federate = matrix['federate'] if 'federate' in matrix else default['federate']

		for server in servers:
			for browser in browsers:
				for php in phps:
					for db in dbs:
						name = 'unknown'

						if isWebUI or isAPI:
							browserString = '' if browser == '' else '-' + browser
							name = '%s%s-%s' % (nameStart, browserString, server.replace('daily-', '').replace('-qa', ''))

						result = {
							'kind': 'pipeline',
							'type': 'docker',
							'name': name,
							'workspace' : {
								'base': '/var/www/owncloud',
								'path': 'server/apps/%s' % config['app']
							},
							'steps': [
								installCore(server, db),
								installTestrunner(php)
							] + ([
								{
									'name': 'install-federation',
									'image': 'owncloudci/core',
									'pull': 'always',
									'settings': {
										'version': server,
										'core_path': '/var/www/owncloud/federated'
									}
								},
								{
									'name': 'configure-federation',
									'image': 'owncloudci/php:%s' % php,
									'pull': 'always',
									'commands': [
										'echo "export TEST_SERVER_FED_URL=http://federated" > /var/www/owncloud/saved-settings.sh',
										'cd /var/www/owncloud/federated',
										'php occ a:l',
										'php occ a:e testing',
										'php occ a:l',
										'php occ config:system:set trusted_domains 1 --value=federated',
										'php occ log:manage --level 0',
										'php occ config:list'
									]
								}
							] if federate else []) + [
								setupServerAndApp(php),
								fixPermissions(php),
								({
									'name': 'acceptance-tests',
									'image': 'owncloudci/php:%s' % php,
									'pull': 'always',
									'environment': {
										'TEST_SERVER_URL': 'http://server',
										'BEHAT_SUITE': suite,
										'SELENIUM_HOST': 'selenium',
										'SELENIUM_PORT': '4444',
										'BROWSER': browser,
										'PLATFORM': 'Linux',
									},
									'commands': [
										'touch /var/www/owncloud/saved-settings.sh',
										'. /var/www/owncloud/saved-settings.sh',
										'cd /var/www/owncloud/testrunner/apps/%s' % config['app'],
										'make test-acceptance-webui'
									]
								} if isWebUI else None),
								({
									'name': 'acceptance-tests',
									'image': 'owncloudci/php:%s' % php,
									'pull': 'always',
									'environment': {
										'TEST_SERVER_URL': 'http://server',
										'BEHAT_SUITE': suite
									},
									'commands': [
										'cd /var/www/owncloud/testrunner/apps/%s' % config['app'],
										'make test-acceptance-api'
									]
								} if isAPI else None),
							],
							'services': databaseService(db)
								+ browserService(browser)
								+ owncloudService(server, php, 'server', '/var/www/owncloud/server', False)
								+ (owncloudService(server, php, 'federated', '/var/www/owncloud/federated', False) if federate else []),
							'depends_on': [],
							'trigger': {
								'ref': [
									'refs/pull/**',
									'refs/tags/**'
								]
							}
						}

						for branch in config['branches']:
							result['trigger']['ref'].append('refs/heads/%s' % branch)

						pipelines.append(result)

	return pipelines

