def main(ctx):
	before = beforePipelines()

	stages = stagePipelines()
	dependsOn(before, stages)

	after = afterPipelines()
	dependsOn(stages, after)

	return before + stages + after

def beforePipelines():
	return [
		codestyle(),
		javascript()
	]

def stagePipelines():
	return phpunit() + acceptance()

def afterPipelines():
	return [
		notify()
	]

def codestyle():
