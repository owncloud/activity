<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>
	<table>
		<name>*dbprefix*activity</name>
		<declaration>
			<field>
				<name>activity_id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<length>4</length>
			</field>
			<field>
				<name>timestamp</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<length>4</length>
			</field>
			<field>
				<name>priority</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<length>4</length>
			</field>
			<field>
				<name>type</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>255</length>
			</field>
			<field>
				<name>user</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>64</length>
			</field>
			<field>
				<name>affecteduser</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>app</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>32</length>
			</field>
			<field>
				<name>subject</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>
			<field>
				<name>subjectparams</name>
				<type>clob</type>
				<notnull>true</notnull>
			</field>
			<field>
				<name>message</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>255</length>
			</field>
			<field>
				<name>messageparams</name>
				<type>clob</type>
				<notnull>false</notnull>
			</field>
			<field>
				<name>file</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>4000</length>
			</field>
			<field>
				<name>link</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>4000</length>
			</field>
			<field>
				<name>object_type</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>255</length>
			</field>
			<field>
				<name>object_id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<length>4</length>
			</field>

			<index>
				<name>activity_time</name>
				<field>
					<name>timestamp</name>
					<sorting>descending</sorting>
				</field>
			</index>

			<index>
				<name>activity_user_time</name>
				<field>
					<name>affecteduser</name>
				</field>
				<field>
					<name>timestamp</name>
					<sorting>descending</sorting>
				</field>
			</index>

			<index>
				<name>activity_filter_by</name>
				<field>
					<name>affecteduser</name>
				</field>
				<field>
					<name>user</name>
				</field>
				<field>
					<name>timestamp</name>
					<sorting>descending</sorting>
				</field>
			</index>

			<index>
				<name>activity_filter_app</name>
				<field>
					<name>affecteduser</name>
				</field>
				<field>
					<name>app</name>
				</field>
				<field>
					<name>timestamp</name>
					<sorting>descending</sorting>
				</field>
			</index>

			<index>
				<name>activity_object</name>
				<field>
					<name>object_type</name>
				</field>
				<field>
					<name>object_id</name>
				</field>
			</index>
		</declaration>
	</table>
	<table>
		<name>*dbprefix*activity_mq</name>
		<declaration>
			<field>
				<name>mail_id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<length>4</length>
			</field>
			<field>
				<name>amq_timestamp</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<length>4</length>
			</field>
			<field>
				<name>amq_latest_send</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<length>4</length>
			</field>
			<field>
				<name>amq_type</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>
			<field>
				<name>amq_affecteduser</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>amq_appid</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>
			<field>
				<name>amq_subject</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>
			<field>
				<name>amq_subjectparams</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>4000</length>
			</field>

			<index>
				<name>amp_user</name>
				<field>
					<name>amq_affecteduser</name>
					<sorting>ascending</sorting>
				</field>
			</index>
			<index>
				<name>amp_latest_send_time</name>
				<field>
					<name>amq_latest_send</name>
				</field>
			</index>
			<index>
				<name>amp_timestamp_time</name>
				<field>
					<name>amq_timestamp</name>
				</field>
			</index>
		</declaration>
	</table>
</database>
